<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       >
    <servlet>
        <servlet-name>person</servlet-name>
        <servlet-class>com.servlet.main.Controller.PersonServlets.PersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>person</servlet-name>
        <url-pattern>/person</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>persons</servlet-name>
        <servlet-class>com.servlet.main.Controller.PersonServlets.PersonsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>persons</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>

</web-app>